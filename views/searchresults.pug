block content
    .container-fluid.myContainer
      if(Courses)
        .row
          .col-md-4
            .card
              img.card-img-top(src='/Images/student3.jpg', alt='studentroom')
              |                   
              .card-body.text-center
                h5.card-title Course description
                |                       
                p.card-text= Courses[0].get("description")
              |             
          .col-md-4
            .card
              img.card-img-top(src='/Images/student4.jpg', alt='students')
              |                   
              .card-body.text-center
                h5.card-title Course credits
                |                       
                p.card-text This course is 
                  span= Courses[0].get("credits")
                    span .00 units.
              |             
          .col-md-4
            .card
              img.card-img-top(src='/Images/college6.jpg', alt='collegecampus')
              |                   
              .card-body.text-center
                h5.card-title Course dates
                |                       
                p.card-text= Courses[0].get("courseStartDate")
                  span "-"
                    span= Courses[0].get("courseEndDate")
        |          
        .table-responsive
          table#searchresultstable.table.table-hover(class='.table-sm')
            thead
              tr
                th Course Number
                |  
                th Course Section
                |                        
                th Course Name
                |                      
                th Instructor
                |                      
                th Days
                |                      
                th Times
                |                  
                th Status
                |                      
                th Add Course
                |                
            tbody
              each course in Courses
                tr#rowID= course.get("courseSection")
                  td.courseidinfo= course.get("courseid")
                  |                    
                  td.coursesecinfo(id= count)= course.get("courseSection")
                  |   
                  td.coursenameinfo= course.get("coursename")
                  |                      
                  td.courseprofinfo= course.get("instructor")
                  |                      
                  td 
                  |                      
                  td 
                  |  
                  if(course.get("status") == true)                  
                    td.coursestatusinfo open
                    |
                  else  
                    td.coursestatusinfo closed
                    |  
                  |    
                  if(course.get("status") == true)                  
                    td.openCourse
                     - var count = course.get("courseSection");
                      //- button.btnids.btn.btn-primary(type='submit') Add
                      button.btnids.btn.btn-primary(type='submit', id= { count }) Add
